vrrp_instance VI_1 {
  state BACKUP
  interface {{ loadbalancer_iface }}
  virtual_router_id 51
  priority {{ keepalived_priority_map[ansible_default_ipv4.address] | default(100) }}
  advert_int 1
  authentication {
      auth_type PASS
      auth_pass 42
  }
  virtual_ipaddress {
      {{ loadbalancer_vip }}/{{ vip_cidr }}
  }
  track_script {
      chk_haproxy
  }
}

vrrp_script chk_haproxy {
  script "pidof haproxy"
  interval 2
  weight 2
}